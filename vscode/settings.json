// This is an example. Synchronize vscode settings with:
// https://code.visualstudio.com/docs/editor/settings-sync
{
  "files.autoSave": "onFocusChange",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": false,
  "editor.detectIndentation": true,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "explorer.openEditors.visible": 0,
  "editor.lineNumbers": "on",
  "workbench.colorCustomizations": {
    // https://github.com/nathanbuchar/atom-one-dark-terminal/blob/master/COLORS
    "terminal.background":"#1E2127",
    "terminal.ansiBlack": "#1E2127",
    "terminal.ansiBrightBlack": "#5C6370",
    "terminal.ansiRed": "#E06C75",
    "terminal.ansiBrightRed": "#E06C75",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiYellow": "#D19A66",
    "terminal.ansiBrightYellow": "#D19A66",
    "terminal.ansiBlue": "#61AFEF",
    "terminal.ansiLight Blue": "#61AFEF",
    "terminal.ansiMagenta": "#C678DD",
    "terminal.ansiLight Magenta": "#C678DD",
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiLight Cyan": "#56B6C2",
    "terminal.ansiWhite": "#ABB2BF",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.ansiText": "#ABB2BF",
    "terminal.ansiBold Text": "#ABB2BF",
    "terminal.ansiSelection": "#3A3F4B",
    "terminal.ansiCursor": "#5C6370",
  },
  "breadcrumbs.enabled": true,
  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "search.exclude": {
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true
  },
  "window.zoomLevel": 0,
  "git.autofetch": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.profiles.osx": "/bin/zsh",
  "terminal.integrated.profiles.linux": "/bin/zsh",
  "terminal.integrated.scrollback": 100000,
}
